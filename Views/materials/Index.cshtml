@model IEnumerable<YRPortal.Models.material>

@{
    ViewBag.Title = "Index";
}

<h2>Course Materials</h2>
<div>
    <a href="/materials/Create" type="button" class="btn btn-primary" style=" background-color: #193441; margin-bottom: 1%;}">Upload material</a>
</div>

<table class="table">
    <tr>
        <th>
            Title
        </th>
        <th>
            Content
        </th>
        <th>
            Course Name
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td>
                <a href="@Url.Action("DisplayFile", "materials", new { filePath = item.content })">Download File</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.courseName)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { style = "color: red;" })
            </td>
        </tr>
    }

</table>
<div>
    <a href="/Courses/InstructorView" type="button" class="btn btn-primary" style=" background-color: #193441;position: relative; float: right; margin-top: 2%; margin-right: 1%;">Back</a>
</div>