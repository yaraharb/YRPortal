@model IEnumerable<YRPortal.Models.Review>

@{
    ViewBag.Title = "Index";
}

<h2>Reviews</h2>

<div>
    <a href="/Reviews/Create" type="button" class="btn btn-primary" style=" background-color: #193441; margin-bottom: 1%;}">Create a new review</a>
</div>
<style>
    .star {
        color: gold;
        font-size: 20px;
    }

</style>
@ViewBag.error
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Explanation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Relevance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comment)
        </th>
        <th>
            Course Name
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @for (int i = 0; i < item.Explanation; i++)
                {
                    <span class="star">&#9733;</span>
                }
            </td>

            <td>
                @for (int i = 0; i < item.Content; i++)
                {
                    <span class="star">&#9733;</span>
                }
            </td>
            <td>
                @for (int i = 0; i < item.Relevance; i++)
                {
                    <span class="star">&#9733;</span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { style = "color: red" })
            </td>
        </tr>
    }

</table>
<div>
    <a href="/Courses/StudentView" type="button" class="btn btn-primary" style=" background-color: #193441;position: relative; float: right; margin-top: 2%; margin-right: 1%;">Back</a>
</div>