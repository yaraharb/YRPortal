@model IEnumerable<YRPortal.Models.Course>

@{
    ViewBag.Title = "StudentView";
}

<link href="@Url.Content("~/css/StudentView.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/css/loginPage.css")" rel="stylesheet" type="text/css" />

<button id="menu-btn">
    <i class="fas fa-bars"></i>
</button>

<div class="sideMenu">
    <h3 style="color: white; text-align: center;">My Dashboard</h3>
    <ul class="list">
        <li><a href="/Courses/EnrollList" }>Enroll in Courses</a></li>
        <li><a href="~/Task/Index">View Tasks</a></li>
        <li><a href="~/Notes/Index" type="button">View Notes</a></li>
        <li><a href="~/Reviews/Create" type="button">Give a Review</a></li>
        <li><a href="~/Students/changePassword">Change Password</a></li>
    </ul>
</div>
<button class="menu-button" onclick="document.querySelector('.sideMenu').style.display='block'">
    <span class="menu-icon"></span>Show Menu
</button>

<h2 style="margin-left: 2%; margin-top: 7%;">Courses</h2>
<div class="row">

</div>

<div class="row menu">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <p class="card-title"><strong>Name: </strong>@Html.DisplayFor(modelItem => item.Name)</p>
                    <p class="card-text"><strong>Description: </strong>@Html.DisplayFor(modelItem => item.Description)</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group buttonText">
                            @Html.ActionLink("Material", "material", new { id = item.CourseID })
                            @Html.ActionLink("Drop", "Delete", new { id = item.CourseID }, new { style = "color: red;" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
