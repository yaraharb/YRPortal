@model YRPortal.Models.Task

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt style="margin-bottom: 1%">
            Title
        </dt>

        <dd style="margin-bottom: 1%">
            @Html.DisplayFor(model => model.title)
        </dd>

        <dt style="margin-bottom: 1%">
            Content
        </dt>

        <dd style="margin-bottom: 1%">
            @Html.DisplayFor(model => model.content)
        </dd>

        <dt style="margin-bottom: 1%">
            Deadline
        </dt>

        <dd style="margin-bottom: 1%">
            @Html.DisplayFor(model => model.deadline)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <a href="/Task/Index" type="button" class="btn btn-primary" style=" background-color: #193441;position: relative; float: right; margin-top: 2%; margin-right: 1%;">Back</a>
            <input type="submit" value="Delete" class="btn btn-default" style="background-color: #e81405; color: white; position: relative; float: right; margin-top: 2%; margin-right: 1%;" />

        </div>
  
    }
</div>
